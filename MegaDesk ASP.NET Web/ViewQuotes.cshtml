@{
    Page.Title = "MegaDesk ASP.NET Web";
    Layout = "~/_Layout.cshtml";

    var db = Database.Open("WebPagesMegadesk");
    var selectCommand = "SELECT * FROM MegadeskTable";
    var searchTerm = "";

    if (!Request.QueryString["searchCustomer"].IsEmpty())
    {
        selectCommand = "SELECT * FROM MegadeskTable WHERE customer = @0";
        searchTerm = "%" + Request.QueryString["searchCustomer"] + "%";
    }

    if (!Request.QueryString["searchMaterial"].IsEmpty())
    {
        selectCommand = "SELECT * FROM MegadeskTable WHERE material = @0";
        searchTerm = Request.QueryString["searchMaterial"];
    }

    //if (!Request.QueryString["searchkeyword"].IsEmpty())
    //{
    //    selectCommand = "SELECT * FROM MegadeskTable WHERE Note LIKE @0";
    //    searchTerm = "%" + Request.QueryString["searchkeyword"] + "%";
    //}

    var selectedData = db.Query(selectCommand, searchTerm);
    var grid = new WebGrid(source: selectedData, defaultSort: "Customer", rowsPerPage: 5);

}
<h2>List Desk Orders</h2>
<form method="get">
    <div>
        <label for="searchCustomer">Customer name to look for:</label><br />
        <input type="text" name="searchCustomer"
               value="@Request.QueryString["searchCustomer"]" />
        <input type="Submit" value="Search Customer" /><br />
        (Leave blank to list all desk orders.)<br />
    </div>

    <div>
        <label for="searchMaterial">Desk Order contains the following surface material:</label><br />
        <input type="text" name="searchMaterial"
               value="@Request.QueryString["searchMaterial"]" />
        <input type="Submit" value="Search Material" /><br />
        @*(Leave blank to list all desk orders.)<br />*@
    </div>

    @*<div>
        <label for="Searchkeyword">Scripture verse contains the following keyword:</label><br />
        <input type="text" name="searchkeyword" value="@Request.QueryString["searchkeyword"]" />
        <input type="Submit" value="Search by keyword" /><br />
    </div>*@
</form>
<div>
    @grid.GetHtml(
        tableStyle: "grid",
        headerStyle: "head",
        alternatingRowStyle: "alt",
        columns: grid.Columns(
            grid.Column("Customer"),
            grid.Column("Date"),
            grid.Column("Width"),
            grid.Column("Depth"),
            grid.Column("Drawers"),
            grid.Column("Material"),
            grid.Column("RushOrder"),
            grid.Column("Amount"),
           
            grid.Column(format: @<a href="~/DeleteQuote.cshtml">Delete</a>),
            grid.Column(format: @<a href="~/EditQuote.cshtml">Edit</a>)
       )
    )
</div>
